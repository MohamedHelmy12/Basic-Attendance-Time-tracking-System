<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <title>@ViewBag.Title</title>
    <!-- Boxicons CSS -->
    <link flex href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/admin.js" defer></script> 
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div>
                <!-- Sidebar -->
                <nav class="sidebar locked">
                    <div class="logo_items flex">
                        <span class="nav_image">
                            <i class="fas fa-school"></i>
                        </span>
                        <span class="logo_name">Attendance System</span>
                        <i class="bx bx-lock-alt" id="lock-icon" title="Unlock Sidebar"></i>
                        <i class="bx bx-x" id="sidebar-close"></i>

                    </div>

                    <div class="menu_items">
                        <ul class="menu_item">
                            <div class="menu_title flex">
                                <span class="title">Dashboard</span>
                                <span class="line"></span>
                            </div>
                            <li class="item">
                                <a href="#" class="link flex">
                                    <i class="bx bx-home-alt"></i>
                                    <span>Overview</span>
                                </a>
                            </li>
                            <li class="item">
                                <a href="#" class="link flex">
                                    <i class="bx bx-grid-alt"></i>
                                    <span>All Projects</span>
                                </a>
                            </li>
                            <li class="item">
                                <a href="@Url.Action("Show", "Student")" class="link flex">
                                    <i class="bx bx-user"></i>
                                    <span>Student Table</span>
                                </a>
                            </li>
                            <li class="item">
                                <a href="@Url.Action("Index", "Instructor")" class="link flex">
                                    <i class="bx bx-user"></i>
                                    <span>Instructor Table</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="sidebar_profile flex">
                        <div class="data_text">
                            <span style="border:2px solid black" class="name">@User.Identity.Name</span>
                        </div>
                    </div>
            </div>
            </nav>
        </div>

        <div class="container container-fluid offset-1">
            <div class="col-12">
                <div class="row">
                    <!-- Render the content based on user role -->
                    @if (User.IsInRole("Student"))
                    {
                        <!-- Student-specific content -->
                        @RenderSection("scripts", required: false)
                        @RenderBody()

                    }
                    else if (User.IsInRole("Instructor"))
                    {
                        <!-- Instructor-specific content -->
                        @RenderBody()
                    }
                    else
                    {
                        <!-- Default content for other users -->
                        @RenderBody()
                    }
                </div>
            </div>
        </div>
    </div>
    </div>
</body>
</html>


