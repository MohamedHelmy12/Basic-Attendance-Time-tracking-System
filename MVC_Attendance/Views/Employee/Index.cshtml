@model List<MVC_Attendance.Models.Employee>

@{
    ViewBag.Title = "Employee Data";
}

<h2>Employee Index</h2>



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">@ViewBag.Title</h2>
                </div>
                <div class="card-body">
                    <div class="col-12 mb-3">
                        <a asp-action="Create" class="btn btn-primary">Add Employee</a>
                    </div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Employee ID</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Employee Type</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in Model)
                            {
                                <tr>
                                    <td>@employee.Id</td>
                                    <td>@employee.FirstName</td>
                                    <td>@employee.LastName</td>
                                    <td>@employee.EmployeeType</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-info">Details</a> |
                                        <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-primary">Edit</a> |
                                        <a asp-action="Delete" asp-route-id="@employee.Id" onclick="return confirm('Are you sure?')" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
