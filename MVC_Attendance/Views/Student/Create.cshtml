@model MVC_Attendance.Models.StudentViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1>Create</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Student.UniversityID" class="control-label"></label>
                <input asp-for="Student.UniversityID" class="form-control" />
                <span asp-validation-for="Student.UniversityID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Faculty" class="control-label"></label>
                <input asp-for="Student.Faculty" class="form-control" />
                <span asp-validation-for="Student.Faculty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Specialization" class="control-label"></label>
                <input asp-for="Student.Specialization" class="form-control" />
                <span asp-validation-for="Student.Specialization" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.GraduationYear" class="control-label"></label>
                <input asp-for="Student.GraduationYear" class="form-control" />
                <span asp-validation-for="Student.GraduationYear" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Student.FirstName" class="control-label"></label>
                <input asp-for="Student.FirstName" class="form-control" />
                <span asp-validation-for="Student.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.LastName" class="control-label"></label>
                <input asp-for="Student.LastName" class="form-control" />
                <span asp-validation-for="Student.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Email" class="control-label"></label>
                <input asp-for="Student.Email" class="form-control" />
                <span asp-validation-for="Student.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Password" class="control-label"></label>
                <input asp-for="Student.Password" class="form-control" />
                <span asp-validation-for="Student.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Phone" class="control-label"></label>
                <input asp-for="Student.Phone" class="form-control" />
                <span asp-validation-for="Student.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Address" class="control-label"></label>
                <input asp-for="Student.Address" class="form-control" />
                <span asp-validation-for="Student.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Address" class="control-label"></label>
                <input asp-for="Student.Address" class="form-control" />
                <span asp-validation-for="Student.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StdIntakeTrack.Track" class="control-label"></label>
                <select asp-for="StdIntakeTrack.Track" class="form-control">
                    <option value="">Select Track</option>
                    @foreach (var track in ViewBag.Tracks)
                    {
                        <option value="@track">@track.Name</option>
                    }
                </select>
                <span asp-validation-for="StdIntakeTrack.Track" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StdIntakeTrack.Intake" class="control-label"></label>
                <select asp-for="StdIntakeTrack.Intake" class="form-control">
                    <option value="">Select intake</option>
                    @foreach (var intake in ViewBag.intakes)
                    {
                        <option value="@intake">@intake.Name</option>
                    }
                </select>
                <span asp-validation-for="StdIntakeTrack.Track" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
