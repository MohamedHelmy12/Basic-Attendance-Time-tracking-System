@model MVC_Attendance.Models.StudentViewModel

@{
    ViewData["Title"] = "Create";
  
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center">@ViewData["Title"]</h1>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group row">
                            <div class="col">
                                <label asp-for="Student.UniversityID" class="control-label">University ID</label>
                                <input asp-for="Student.UniversityID" class="form-control" />
                                <span asp-validation-for="Student.UniversityID" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <label asp-for="Student.Faculty" class="control-label">Faculty</label>
                                <input asp-for="Student.Faculty" class="form-control" />
                                <span asp-validation-for="Student.Faculty" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col">
                                <label asp-for="Student.Specialization" class="control-label">Specialization</label>
                                <input asp-for="Student.Specialization" class="form-control" />
                                <span asp-validation-for="Student.Specialization" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <label asp-for="Student.GraduationYear" class="control-label">Graduation Year</label>
                                <input asp-for="Student.GraduationYear" class="form-control" />
                                <span asp-validation-for="Student.GraduationYear" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col">
                                <label asp-for="Student.FirstName" class="control-label">First Name</label>
                                <input asp-for="Student.FirstName" class="form-control" />
                                <span asp-validation-for="Student.FirstName" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <label asp-for="Student.LastName" class="control-label">Last Name</label>
                                <input asp-for="Student.LastName" class="form-control" />
                                <span asp-validation-for="Student.LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col">
                                <label asp-for="Student.Email" class="control-label">Email</label>
                                <input asp-for="Student.Email" class="form-control" />
                                <span asp-validation-for="Student.Email" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <label asp-for="Student.Password" class="control-label">Password</label>
                                <input asp-for="Student.Password" class="form-control" />
                                <span asp-validation-for="Student.Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col">
                                <label asp-for="Student.Phone" class="control-label">Phone</label>
                                <input asp-for="Student.Phone" class="form-control" />
                                <span asp-validation-for="Student.Phone" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <label asp-for="Student.Address" class="control-label">Address</label>
                                <input asp-for="Student.Address" class="form-control" />
                                <span asp-validation-for="Student.Address" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col">
                                <label asp-for="StdIntakeTrack.Track" class="control-label">Track</label>
                                <select asp-for="StdIntakeTrack.Track" class="form-control">
                                    <option value="">Select Track</option>
                                    @foreach (var track in ViewBag.Tracks)
                                    {
                                        <option value="@track">@track.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="StdIntakeTrack.Track" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <label asp-for="StdIntakeTrack.Intake" class="control-label">Intake</label>
                                <select asp-for="StdIntakeTrack.Intake" class="form-control">
                                    <option value="">Select Intake</option>
                                    @foreach (var intake in ViewBag.intakes)
                                    {
                                        <option value="@intake">@intake.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="StdIntakeTrack.Intake" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Show" class="btn btn-secondary">Back to List</a>
</div>
