@model MVC_Attendance.viewModels.SupervisorAddViewModel

@{
    ViewData["Title"] = "Add";
}


<h2>Add Supervisor</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label for="instructorId">Select Instructor:</label>
        <select class="form-control" id="instructorId" name="instructorId">
            @foreach (var instructor in Model.Instructors)
            {
                <option value="@instructor.Id">@instructor.FirstName @instructor.LastName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="trackId">Select Track:</label>
        <select class="form-control" id="trackId" name="trackId">
            @foreach (var track in Model.Tracks)
            {
                <option value="@track.Id">@track.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Add Supervisor</button>
</form>


